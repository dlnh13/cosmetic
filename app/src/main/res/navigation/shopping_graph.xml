<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shopping_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.cosmetic.fragments.shopping.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_productDetailFragment"
            app:destination="@id/productDetailFragment" />
        <action
            android:id="@+id/action_homeFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
        <action
            android:id="@+id/action_homeFragment_to_notificationFragment"
            app:destination="@id/notificationFragment" />
    </fragment>
    <fragment
        android:id="@+id/blogFragment"
        android:name="com.example.cosmetic.fragments.blog.BlogFragment"
        android:label="BlogFragment" >
        <action
            android:id="@+id/action_blogFragment_to_createPostFragment"
            app:destination="@id/createPostFragment" />
        <action
            android:id="@+id/action_blogFragment_to_commentFragment"
            app:destination="@id/commentFragment" />
    </fragment>
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.example.cosmetic.fragments.shopping.CartFragment"
        android:label="CartFragment" >
        <action
            android:id="@+id/action_cartFragment_to_productDetailFragment"
            app:destination="@id/productDetailFragment" />
        <action
            android:id="@+id/action_cartFragment_to_billingFragment"
            app:destination="@id/billingFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.cosmetic.fragments.settings.ProfileFragment"
        android:label="ProfileFragment" >
        <action
            android:id="@+id/action_profileFragment_to_addressFragment"
            app:destination="@id/addressFragment" />
        <action
            android:id="@+id/action_profileFragment_to_userAccountFragment"
            app:destination="@id/userAccountFragment" />
        <action
            android:id="@+id/action_profileFragment_to_allOrdersFragment"
            app:destination="@id/allOrdersFragment" />
        <action
            android:id="@+id/action_profileFragment_to_billingFragment"
            app:destination="@id/billingFragment" />
        <action
            android:id="@+id/action_profileFragment_to_listFavFragment"
            app:destination="@id/listFavFragment" />
    </fragment>
    <fragment
        android:id="@+id/productDetailFragment"
        android:name="com.example.cosmetic.fragments.shopping.ProductDetailFragment"
        android:label="ProductDetailFragment" >
        <argument
            android:name="product"
            app:argType="com.example.cosmetic.data.Product" />
    </fragment>
    <fragment
        android:id="@+id/addressFragment"
        android:name="com.example.cosmetic.fragments.shopping.AddressFragment"
        android:label="AddressFragment" >
        <argument
            android:name="address"
            app:argType="com.example.cosmetic.data.Address"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/billingFragment"
        android:name="com.example.cosmetic.fragments.shopping.BillingFragment"
        android:label="BillingFragment" >
        <action
            android:id="@+id/action_billingFragment_to_addressFragment"
            app:destination="@id/addressFragment" />
        <argument
            android:name="totalPrice"
            app:argType="float" />
        <argument
            android:name="products"
            app:argType="com.example.cosmetic.data.CartProduct[]" />
        <argument
            android:name="payment"
            app:argType="boolean" />
    </fragment>
    <fragment
        android:id="@+id/userAccountFragment"
        android:name="com.example.cosmetic.fragments.settings.UserAccountFragment"
        android:label="UserAccountFragment" />
    <fragment
        android:id="@+id/allOrdersFragment"
        android:name="com.example.cosmetic.fragments.shopping.AllOrdersFragment"
        android:label="AllOrdersFragment" >
        <action
            android:id="@+id/action_allOrdersFragment_to_orderDetailFragment"
            app:destination="@id/orderDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/orderDetailFragment"
        android:name="com.example.cosmetic.fragments.settings.OrderDetailFragment"
        android:label="OrderDetailFragment" >
        <argument
            android:name="order"
            app:argType="com.example.cosmetic.data.order.Order" />
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.cosmetic.fragments.shopping.ChatFragment"
        android:label="ChatFragment" />
    <fragment
        android:id="@+id/createPostFragment"
        android:name="com.example.cosmetic.fragments.blog.CreatePostFragment"
        android:label="CreatePostFragment" />
    <dialog
        android:id="@+id/commentFragment"
        android:name="com.example.cosmetic.fragments.blog.CommentFragment"
        android:label="CommentFragment" >
        <argument
            android:name="post"
            app:argType="com.example.cosmetic.data.Post" />
    </dialog>
    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.example.cosmetic.fragments.settings.NotificationFragment"
        android:label="NotificationFragment" >
        <action
            android:id="@+id/action_notificationFragment_to_productDetailFragment"
            app:destination="@id/productDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/listFavFragment"
        android:name="com.example.cosmetic.fragments.settings.ListFavFragment"
        android:label="ListFavFragment" >
        <action
            android:id="@+id/action_listFavFragment_to_productDetailFragment"
            app:destination="@id/productDetailFragment" />
    </fragment>
</navigation>