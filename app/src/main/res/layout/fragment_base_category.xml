<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:id="@+id/nestedScrollBaseCategory">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Special Products"
            android:fontFamily="@font/poppins_thin"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:id="@+id/tvSpecialProducts"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rvSpecialProducts"
            app:layout_constraintStart_toStartOf="@id/tvSpecialProducts"
            app:layout_constraintTop_toBottomOf="@id/tvSpecialProducts"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Products"
            android:fontFamily="@font/poppins_thin"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:id="@+id/tvAllProducts"
            app:layout_constraintStart_toStartOf="@id/tvSpecialProducts"
            app:layout_constraintTop_toBottomOf="@id/rvSpecialProducts"
            android:layout_marginTop="10dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/rvOffer"
            app:layout_constraintStart_toStartOf="@id/tvSpecialProducts"
            app:layout_constraintTop_toBottomOf="@id/tvAllProducts"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>