<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/g_card_background"
    app:cardUseCompatPadding="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/img"
            />

<!--        <TextView-->
<!--            android:id="@+id/tvSpecialProductName"-->
<!--            android:layout_width="200dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Bộ cọ Vacosy"-->
<!--            app:layout_constraintStart_toEndOf="@id/imageSpecialRvItem"-->
<!--            app:layout_constraintTop_toTopOf="@id/imageSpecialRvItem"-->
<!--            android:layout_marginTop="7dp"-->
<!--            android:layout_marginStart="30dp"-->
<!--            android:fontFamily="@font/poppins_thin"-->
<!--            android:textStyle="bold"-->
<!--            android:textColor="@color/black"-->
<!--            android:textSize="17sp"-->
<!--            android:maxLines="2"/>-->

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="1600000"
            android:layout_marginTop="7dp"
            app:layout_constraintStart_toStartOf="@id/tvNotiContent"
            app:layout_constraintTop_toBottomOf="@id/tvNotiContent"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:fontFamily="@font/sf_pro_display"/>
        <TextView
            android:id="@+id/tv_discount_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/sf_pro_display"
            android:text="1600"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/tvPrice"
            app:layout_constraintTop_toTopOf="@id/tvPrice"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/tvHeaderNoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display"
            android:text="Dành riêng cho bạn!"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="italic"
            android:layout_marginTop="2dp"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toEndOf="@id/imgProduct"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/tvNotiContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display"
            android:text="Bộ cọ Vacosy đang giảm giá 50% ! Mua ngay !"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toEndOf="@id/imgProduct"
            app:layout_constraintTop_toBottomOf="@id/tvHeaderNoti"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/tvSale"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="296dp"
            android:background="@color/red"
            android:gravity="center"
            android:padding="3dp"
            android:text="- 50%"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/imgProduct"
            android:layout_marginStart="35dp"
            app:layout_constraintTop_toTopOf="@id/imgProduct" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>