<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBarChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pink">


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_close"
            android:id="@+id/ic_close"
            android:layout_marginEnd="10dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">



<!--            <de.hdodenhof.circleimageview.CircleImageView-->
<!--                android:layout_width="60dp"-->
<!--                android:layout_height="60dp"-->
<!--                android:src="@drawable/ic_profile"-->
<!--                app:civ_border_width="2dp"-->
<!--                app:civ_border_color="#FE2C54"-->
<!--                android:id="@+id/chatImageViewUser"/>-->


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cosmetic"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:textColor="#FFFFFF"
                android:id="@+id/chatUserName"
                />



        </LinearLayout>




    </androidx.appcompat.widget.Toolbar>


<!--    <TextView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Online"-->
<!--        android:textSize="16sp"-->
<!--        android:layout_marginTop="37dp"-->
<!--        android:layout_marginLeft="131dp"-->
<!--        android:textColor="#FFFFFF"-->
<!--        android:id="@+id/chatUserStatus"-->
<!--        />-->



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMessages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolBarChat"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_above="@id/layoutChatbox"
        android:layout_marginBottom="10dp"
        />



    <ProgressBar
        android:id="@+id/progressbar_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/g_gray700"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layoutChatbox"
        android:layout_alignParentBottom="true"


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:minHeight="48dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Enter Message"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:maxLines="6" />

        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:text="Send"
            android:textSize="14sp" />
    </LinearLayout>


</RelativeLayout>